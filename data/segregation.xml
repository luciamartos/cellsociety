<?xml version="1.0"?>
<game>
    <main>
        <title>Schelling Segregation Model</title>
        <rule>SchellingModel</rule>
        <author>Will Long</author>
    </main>

    <parameter>
        <name>similar</name>
        <min>0</min>
        <max>100</max>
        <current>60</current>
    </parameter>

    <celltype>
        <id>0</id>
        <name>EMPTY</name>
    </celltype>
    <celltype>
        <id>1</id>
        <name>X</name>
    </celltype>
    <celltype>
        <id>2</id>
        <name>O</name>
    </celltype>


    <grid>
        <width>50</width>
        <height>50</height>
        <defaultid>0</defaultid>
        <fillmethod>percentage</fillmethod>
    </grid>

    <location>
        <id>0</id>
        <percent>10</percent>
    </location>
    <location>
        <id>1</id>
        <percent>45</percent>
    </location>
    <location>
        <id>2</id>
        <percent>45</percent>
    </location>

</game>
